{
	"extends": [
		"stylelint-config-standard-scss",
		"stylelint-config-recess-order",
		"stylelint-config-prettier"
	],
	"rules": {
		"declaration-empty-line-before": [
			"always",
			{
				"except": [
					"first-nested"
				],
				"ignore": [
					"after-comment",
					"after-declaration"
				]
			}
		],
		"custom-property-empty-line-before": [
			"always",
			{
				"except": [
					"after-comment",
					"after-custom-property",
					"first-nested"
				]
			}
		],
		"comment-empty-line-before": [
			"always",
			{
				"except": [
					"first-nested"
				],
				"ignore": [
					"after-comment"
				],
				"ignoreComments": [
					"/^ig/"
				]
			}
		],
		"selector-class-pattern": "^[a-z]+([A-Z-_]?[a-z0-9]+)+$",
		"value-keyword-case": [
			"lower",
			{
				"ignoreProperties": [
					"/^(--)/"
				],
				"ignoreFunctions": [
					"/^(--)/"
				]
			}
		]
	}
}