{
	"compilerOptions": {
		"target": "es5",

		// какую модульную систему будет использовать приложение после сборки
		"module": "ESNext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"jsx": "react-jsx",
		"allowJs": true,

		// неявное использование any
		"noImplicitAny": true,
		"strictBindCallApply": true,

		"outDir": "./dist/",
		"baseUrl": ".",
		"paths": {
			"*": ["./src/*"]
		}
	},
	"ts-node": {
		"compilerOptions": {
			"module": "CommonJS"
		}
	},
	"include": ["./config/jest/setupTests.ts", "./src/**/*.ts", "./src/**/*.tsx"]
}
